<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="app.poojawins.c4q.nyc.scientificcalculator.MainActivity"
    android:orientation="vertical"
    android:clickable="false"
    android:id="@+id/verticalLayout"
    android:background="#010000fd">

   <TableLayout

       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:stretchColumns="4">

   <TableRow>

       <EditText
           android:layout_height="55dp"
           android:layout_width="match_parent"
           android:id="@+id/display"
           android:layout_span="4" />

   </TableRow>


   <TableRow>


       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/acButton"
           android:text="@string/acButton"/>

       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/percentButton"
           android:text="@string/percentButton"/>

       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/parenthesis"
           android:text="@string/parenthesisButton"/>

       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/divide"
           android:text="@string/divideButton"/>

    </TableRow>

    <TableRow>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number7"
            android:text="@string/numberSeven"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number8"
            android:text="@string/numberEight"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number9"
            android:text="@string/numberNIne"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/multiply"
            android:text="@string/multipleButton"/>

    </TableRow>

    <TableRow>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number4"
            android:text="@string/number4"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number5"
            android:text="@string/numberFive"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number6"
            android:text="@string/numberSix"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/subtract"
            android:text="@string/subtractButton"/>

    </TableRow>

    <TableRow>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number1"
            android:text="@string/numberOne"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number2"
            android:text="@string/numberTwo"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number3"
            android:text="@string/numberThree"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/plus"
            android:text="@string/plusButton"/>

    </TableRow>

    <TableRow>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number0"
            android:text="@string/numberZero"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/decimal"
            android:text="@string/decimalButton"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backspace"
            android:text="@string/delButton"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/equal"
            android:text="@string/equalButton"
            />

    </TableRow>

    </TableLayout>
</RelativeLayout>


